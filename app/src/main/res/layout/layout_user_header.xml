<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="author"
            type="AuthorEntity" />

        <variable
            name="feed"
            type="FeedItemEntity" />

        <import type="com.example.jetvideo.dto.FeedItemEntity" />

        <import type="com.example.jetvideo.dto.AuthorEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:imgUrl="@{author.avatar}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearanceImageView_ROUND"
            tools:srcCompat="@mipmap/ic_launcher" />

        <include
            layout="@layout/layout_user_header_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:author="@{author}"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            app:layout_constraintEnd_toStartOf="@id/img_option"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toTopOf="@id/user_avatar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_avatar" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_feed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{feed.feeds_text}"
            app:layout_constraintStart_toStartOf="@id/user_avatar"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            tools:text="發表的内容是什么發表的内容是什么發表的内容是什么發表的内容是什么發表的内容是什么發表的内容是什么發表的内容是什么發表的内容是什么" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>