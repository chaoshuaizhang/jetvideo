<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="author"
            type="AuthorEntity" />

        <import type="android.view.View" />

        <variable
            name="feedText"
            type="java.lang.String" />

        <import type="com.example.jetvideo.dto.AuthorEntity" />

    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            app:imgUrl="@{author.avatar}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearanceImageView_ROUND"
            tools:srcCompat="@mipmap/ic_launcher" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{author.name}"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintBottom_toTopOf="@id/tv2"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="霸氣的名字" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{author.description}"
            android:textSize="14sp"
            android:visibility="@{author.description == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="呵呵呵呵呵" />

        <TextView
            android:id="@+id/tv_user_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{author.tag()}"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
            app:layout_constraintStart_toEndOf="@id/tv_user_name"
            app:layout_constraintTop_toTopOf="@id/tv_user_name"
            tools:text="年度大會元" />

        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="关注"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/img_option"
            app:layout_constraintEnd_toStartOf="@id/img_option"
            app:layout_constraintTop_toTopOf="@id/img_option" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_avatar" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_feed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{feedText}"
            app:layout_constraintStart_toStartOf="@id/user_avatar"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            tools:text="發表的内容是什么發表的内容是什么發表的内容是什么發表的内容是什么發么" />

    </merge>
</layout>